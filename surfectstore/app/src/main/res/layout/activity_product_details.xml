<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient2"
    tools:context=".activities.ProductDetails">


    <LinearLayout
        android:id="@+id/shop_produtoLinBackground"
        android:layout_width="338dp"
        android:layout_height="610dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.494">

        <TextView
            android:id="@+id/shop_produtoTvNomeProduto"
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/doppio_one"
            android:gravity="center"
            android:text="Nome do produto"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shop_produtoTvCategoriaProduto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/doppio_one"
                android:gravity="center"
                android:text="Categoria:"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <com.zolad.zoominimageview.ZoomInImageView
                android:id="@+id/shop_produtoFotoProduto"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:src="@drawable/fatoqs1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="114dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shop_produtoTvStockProduto"
                    android:layout_width="176dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fontFamily="@font/doppio_one"
                    android:gravity="center"
                    android:text="Em stock"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/shop_produtoTvPrecoProduto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:drawableEnd="@drawable/ic_euro_white"
                    android:fontFamily="@font/doppio_one"
                    android:gravity="end|center"
                    android:paddingEnd="40dp"
                    android:text="0.0"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/shop_produtoTvDescricaoProduto"
            android:layout_width="match_parent"
            android:layout_height="184dp"
            android:fontFamily="@font/doppio_one"
            android:padding="10dp"
            android:text="Descrição"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/shop_produtoAdicionar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/doppio_one"
            android:text="EFETUAR COMPRA"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>