<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient2">

    <LinearLayout
        android:id="@+id/ses_linBackground"
        android:layout_width="338dp"
        android:layout_height="640dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ses_imgIcon"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:srcCompat="@drawable/circleicon" />

        <TextView
            android:id="@+id/ses_tvSessão"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/doppio_one"
            android:text="Gira aqui a sua sessão."
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/ses_tvTerminarSessao"
            android:layout_width="match_parent"
            android:layout_height="409dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/doppio_one"
            android:text="@string/sessão"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ses_btTerminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorAccent"
            android:fontFamily="@font/doppio_one"
            android:text="TERMINAR SESSÃO"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" /> />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>