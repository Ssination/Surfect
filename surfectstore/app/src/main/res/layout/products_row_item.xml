<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/shop_recLinProduto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@color/colorAccent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/shop_imgProduto"
        android:layout_width="145dp"
        android:layout_height="match_parent"
        android:background="@drawable/loading_shape" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shop_tvNomeProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/doppio_one"
            android:maxLines="3"
            android:text="Nome do produto"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_tvCategoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/doppio_one"
            android:text="Categoria"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/shop_tvPreÃ§o"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/price_background"
            android:drawableRight="@drawable/ic_euro"
            android:fontFamily="@font/doppio_one"
            android:padding="5dp"
            android:text="0.0"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shop_tvStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/doppio_one"
            android:padding="5dp"
            android:text="Em stock"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>